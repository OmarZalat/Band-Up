model Session {
  id           String   @id @default(cuid())
  userDataId   String   @unique
  createdAt    DateTime @default(now())
  expiry       DateTime
  sessionToken String
  user         UserData @relation(fields: [userDataId], references: [id])
}

model Likes {
  id          String    @id @default(cuid())
  bandPostsId String
  userDataId  String
  post        BandPosts @relation(fields: [bandPostsId], references: [id])
  user        UserData  @relation(fields: [userDataId], references: [id])
}

model Tags {
  id       String     @id @default(cuid())
  name     String     @unique
  BandData BandData[]
}

model Friendship {
  id                                        Int      @id @default(autoincrement())
  createdAt                                 DateTime @default(now())
  followerId                                String
  followingId                               String
  UserData_Friendship_followerIdToUserData  UserData @relation("Friendship_followerIdToUserData", fields: [followerId], references: [id])
  UserData_Friendship_followingIdToUserData UserData @relation("Friendship_followingIdToUserData", fields: [followingId], references: [id])

  @@unique([followerId, followingId])
}

enum Role {
  MEMBER
  PUBLISHER
  LEADER
}

enum Type {
  INDIVIDUAL
  BAND
}
